    String baseUrl = "http://newtours.demoaut.com";
  
  @BeforeTest
  public void OdpalFF(){
	  driver.get(baseUrl);
	  
  }
    
  
  @AfterTest
  public void TerminateBrowser(){
	  driver.quit();
	  
  }   
	
	
